@page "/todolist"
@rendermode InteractiveServer
@inject IJSRuntime Js

<PageTitle>ToDoList</PageTitle>

<link rel="stylesheet" href="lib/bootstrap/dist/css/ToDoList.css" />
<script src="lib/bootstrap/dist/js/ToDoList.js" defer></script>

<div class="page-content">
    <div class="container">
        <h1 class="header1">ToDo List</h1>
        <form class="todo-form">
            <input type="text" id="todoInput" placeholder="What's the plan today?" />
            <button type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                     fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
        </form>
        <div id="statusText"></div>
        <ul id="todoList"></ul>
    </div>
</div>
